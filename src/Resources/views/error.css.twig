html {
    background: #fff;
}

body {
    font: 1em Open Sans, Helvetica, sans-serif;
    font-weight: 300;
    color: #333;
    margin: 0;
    padding: 0;
}

a, a:visited {
    text-decoration: none;
    color: #e4790f;
}

a:focus {
    outline: 0;
}

a:hover {
    text-decoration: underline;
}

h1, h2, h3 {
    font-weight: 100;
}

h1 {
    font-size: 3em;
    margin: 0;
    padding: 2% 0;
}

h2, h3 {
    font-size: 1.5em;
}


#header {
    padding-top: 5%;
}

#content {
    background-color: #eeeeee;
    padding: 1% 0;
}

#footer {
    font-size: 0.8em;
    text-align: center;
    padding: .5em 0;
    color: #999;
}

.wrap {
    width: 50%;
    margin: 0 auto;
}

.header-logo {
    display: inline-block;
}

.search {
    display: inline-block;
    float: right;
}

.block-error {
    -moz-border-radius: 16px;
    -webkit-border-radius: 16px;
    border-radius: 16px;
    margin-bottom: 20px;
    background-color: #fff;
    border: 1px solid #dfdfdf;
    padding: 30px 28px;
    word-wrap: break-word;
    overflow: hidden;
}

.block-error:before {
    float: left;
    content: "</";
    font-size: 5em;
    color: #ccc;
}

.block-error .inner {
    padding-left: 15%;
}
