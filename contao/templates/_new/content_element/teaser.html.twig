{% trans_default_domain "contao_default" %}
{% extends "@Contao/content_element/_base.html.twig" %}
{% use "@Contao/component/_read_more.html.twig" %}

{% block headline %}
    {% include "@Contao/component/_headline.html.twig" with {headline: {unit: 'h1', value: article.title}} %}
{% endblock %}

{% block content %}
    {% block teaser %}
        {% if as_editor_view %}
            {{ article.teaser|default|raw }}
        {% else %}
            {{ article.teaser|default|insert_tag|raw }}
        {% endif %}
    {% endblock %}

    {% block link %}
        {% with {title: 'MSC.readMore'|trans([article.title])} %}
            {{ block('read_more_component') }}
        {% endwith %}
    {% endblock %}
{% endblock %}
