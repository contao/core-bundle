{% extends "@Contao/content_element/_base.html.twig" %}
{% use "@Contao/component/_table.html.twig" %}

{% block content %}
    {{ block('table_component') }}
{% endblock %}

{%- block table_caption_inner %}
    {{- caption|insert_tag|raw -}}
{% endblock -%}

{%- block table_cell_content %}
    {%- if as_editor_view -%}
        {{ cell|trim|replace({'\n': '<br>\n'})|raw }}
    {%- else -%}
        {{ cell|trim|replace({'\n': '<br>\n'})|insert_tag|raw }}
    {%- endif -%}
{% endblock -%}
